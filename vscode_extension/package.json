{
  "name": "nattlua",
  "description": "Nattlua Language Client",
  "icon": "icon.png",
  "author": "CapsAdmin",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "unpublished",
  "keywords": [
    "LSP",
    "Language Server Client"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "workspaceContains:**/*.lua",
    "onLanguage:nlua",
    "workspaceContains:**/*.nlua"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "engines": {
    "vscode": "^1.98.2"
  },
  "main": "./out/extension",
  "contributes": {
    "configurationDefaults": {
      "[nattlua]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "languages": [
      {
        "id": "nattlua",
        "extensions": [
          ".nlua",
          ".lua"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nattlua",
        "scopeName": "source.nlua",
        "path": "./syntaxes/nlua.tmLanguage.json",
        "tokenTypes": {
          "comment.line.double-dash.doc.nlua": "other"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "nattlua configuration",
      "properties": {
        "nattlua.executable": {
          "type": "string",
          "default": "nattlua",
          "description": "path to or name of executable, assumes you have 'nattlua' installed and available"
        },
        "nattlua.workingDirectory": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "working directory of the executable"
        },
        "nattlua.arguments": {
          "type": "array",
          "default": [
            "lsp"
          ],
          "items": {
            "type": "string"
          },
          "description": "arguments for executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "build": "yarn vsce package",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "concat-map": "^0.0.2",
    "semver": "^7.7.1",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.13",
    "@types/vscode": "^1.98.0",
    "typescript": "^5.8.2",
    "vsce": "^2.15.0"
  }
}